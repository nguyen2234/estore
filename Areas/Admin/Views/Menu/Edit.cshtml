@model estore.Models.TblMenu
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<main id="main" class="main">
    <div class="page-title">
        <h2>Chỉnh sửa mục</h2>
    </div>
    <div class="container shadow p-5">
        <form asp-action="Edit" method="post">
            <div class="form-row">
                <input type="text" class="form-control" asp-for="MenuId" type="hidden" />
                <div class="form-group col-md-6 mb-3">
                    <label>Tên menu</label>
                    <input type="text" class="form-control" asp-for="MenuName" placeholder="Nhập tên menu....." />
                    <span asp-validation-for="MenuName" class="alert-danger"></span>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Cấp độ</label>
                    <select asp-for="Levels" class="form-select" id="Levels">
                        <option value="1">1</option>
                        <option value="2">2</option>
                    </select>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Mục cha</label>
                    <select asp-for="ParentId" class="form-control"
                            asp-items="@(new SelectList(ViewBag.mnlist, "Value", "Text"))"> </select>
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Liên kết</label>
                    <input type="text" class="form-control" asp-for="Link"
                           placeholder="Nhập liên kết" />
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>Thứ tự sắp xếp</label>
                    <input type="text" class="form-control" asp-for="MenuOrder"
                           placeholder="Lựa chọn thứ tự sắp xếp cho mục..." />
                </div>
                <div class="form-group col-md-6 mb-3">
                    <label>
                        @Html.CheckBox("IsActive", Model.IsActive)
                        ẩn hiện
                    </label>
                </div>
            </div>
            <a asp-controller="Menu" asp-action="Index" class="btn btn-lg btn-warning p-2">
                <i class="bi bi-arrow-down-left-circle"></i>
                Trở về
            </a>
            <button type="submit" class="btn btn-lg btn-primary p-2">
                <i class="bi bi-file-plush-fill"></i>Lưu thông tin
            </button>
        </form>

    </div>
</main>
